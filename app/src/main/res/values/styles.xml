<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="o_mr1">#fff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>

        <item name="android:windowBackground">@color/colorWhite</item>
    </style>
    <style name="TitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="SubtitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="GreyAccent">
        <item name="colorAccent">@color/light_grey</item>
        <item name="colorPrimary">@color/light_grey</item>
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
